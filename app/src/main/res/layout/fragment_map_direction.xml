<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/MapFragmentDirection"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder_button">
                    <EditText
                        android:id="@+id/edtCurrentLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_15sdp"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:hint="@string/Your_Position"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@color/crystal"
                        android:drawableRight="@drawable/ic_search"/>
                    <Button
                        android:id="@+id/btnSearch"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@color/crystal"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </FrameLayout>
            <Button
                android:id="@+id/btnPosition"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/ic_current_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>
        </RelativeLayout>

    </FrameLayout>
</layout>